{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "node",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "lib": [
      "es6",
      "es7",
      "es2017",
      "dom"
    ],
    "typeRoots": [
        "./node_modules/@types",
        "./node_modules/@infogata"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
