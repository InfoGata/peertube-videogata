{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "lib": [
      "es6",
      "es7",
      "es2017",
      "dom"
    ],
    "typeRoots": [
        "./node_modules/@types",
        "./node_modules/@infogata"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
